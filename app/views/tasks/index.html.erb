<h1>My tasks</h1>
<% @tasks.each do |task| %>

<p>
  <% if task.completed %>
  ☑️
  <% else %>
  ◻️
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "🗑", task_path(task), method: :delete, data: {confirm:'Are you sure you want to delete?'}%>
</p>
<% end %>

<p><%= link_to "Create new task", new_task_path %></p>
